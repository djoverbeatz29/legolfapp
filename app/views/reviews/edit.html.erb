<h1>Edit Review</h1>

<% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |mess| %>
        <p><%= mess %></p>
    <% end %>
<% end %>

<%= form_with model: [@course, @review] do |f| %>
    Rating: <%= f.number_field :rating %><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %>
    <%= f.text_area :content %><br> 
    <%= f.submit %>
<% end %>